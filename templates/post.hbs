{{!< default}}

{{#post}}
<main class="min-h-screen bg-gray-50">
  <!-- Hero Section -->
  <section class="relative py-20 bg-gradient-to-br from-blue-50 via-white to-indigo-50" id="post-hero">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        
        <!-- Post Meta -->
        <div class="flex items-center justify-center space-x-4 text-sm text-gray-500 mb-6" id="post-meta">
          {{#if primary_tag}}
            <a href="{{primary_tag.url}}" class="inline-flex items-center px-3 py-1 bg-blue-100 text-blue-700 rounded-full font-medium hover:bg-blue-200 transition-colors duration-200">
              <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
              {{primary_tag.name}}
            </a>
          {{/if}}
          <span class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            {{date format="MMMM DD, YYYY"}}
          </span>
          {{#if reading_time}}
            <span class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
              </svg>
              {{reading_time}}
            </span>
          {{/if}}
        </div>
        
        <!-- Post Title -->
        <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6 leading-tight" id="post-title">
          {{title}}
        </h1>
        
        <!-- Post Excerpt -->
        {{#if excerpt}}
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed" id="post-excerpt">
            {{excerpt}}
          </p>
        {{/if}}
        
      </div>
    </div>
    
    <!-- Animated background elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute -top-10 -right-10 w-96 h-96 bg-blue-100 rounded-full opacity-20 animate-pulse"></div>
      <div class="absolute -bottom-10 -left-10 w-96 h-96 bg-indigo-100 rounded-full opacity-20 animate-pulse" style="animation-delay: 1s;"></div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-12" id="post-content">
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row gap-12">
        
        <!-- Main Article Content -->
        <div class="lg:w-2/3">
          <article class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
            {{#if feature_image}}
              <div class="relative h-64 md:h-96 overflow-hidden">
                <img src="{{img_url feature_image size="xl"}}" 
                     alt="{{title}}" 
                     class="w-full h-full object-cover">
              </div>
            {{/if}}
            
            <div class="p-8 md:p-12">
              <!-- Post Content -->
              <div class="prose prose-lg prose-gray max-w-none" id="ghost-content">
                {{content}}
              </div>
              
              <!-- Post Tags -->
              {{#if tags}}
                <div class="mt-12 pt-8 border-t border-gray-200">
                  <div class="flex flex-wrap gap-2">
                    {{#foreach tags}}
                      <a href="{{url}}" class="inline-flex items-center px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm font-medium hover:bg-blue-100 hover:text-blue-700 transition-colors duration-200">
                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z"></path>
                        </svg>
                        {{name}}
                      </a>
                    {{/foreach}}
                  </div>
                </div>
              {{/if}}
              
            </div>
          </article>
        </div>
        
        <!-- Sidebar -->
        <aside class="lg:w-1/3" id="post-sidebar">
          <div class="space-y-8">
            
            <!-- Author Info -->
            {{#primary_author}}
              <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100 sidebar-widget" id="author">
                <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                  <svg class="w-5 h-5 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  About the Author
                </h3>
                <div class="flex items-start space-x-4">
                  {{#if profile_image}}
                    <img src="{{img_url profile_image size="m"}}" 
                         alt="{{name}}" 
                         class="w-16 h-16 rounded-full object-cover flex-shrink-0">
                  {{/if}}
                  <div class="flex-1">
                    <h4 class="text-lg font-semibold text-gray-900 mb-1">{{name}}</h4>
                    {{#if bio}}
                      <p class="text-gray-600 mb-3 text-sm">{{bio}}</p>
                    {{/if}}
                    <div class="flex items-center space-x-4 text-sm text-gray-500">
                      {{#if website}}
                        <a href="{{website}}" target="_blank" rel="noopener" class="flex items-center hover:text-blue-600 transition-colors duration-200">
                          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                          </svg>
                          Website
                        </a>
                      {{/if}}
                      <a href="{{url}}" class="flex items-center hover:text-blue-600 transition-colors duration-200">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        View Profile
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            {{/primary_author}}
            
            
            <!-- Related Posts -->
            <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100 sidebar-widget">
              <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                <svg class="w-5 h-5 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                </svg>
                Related Articles
              </h3>
              <div class="space-y-4">
                {{#get "posts" filter="tag:{{primary_tag.slug}}+id:-{{id}}" limit="3" include="authors"}}
                  {{#foreach posts}}
                    <article class="group">
                      <div class="flex space-x-3">
                        {{#if feature_image}}
                          <div class="flex-shrink-0">
                            <img src="{{img_url feature_image size="xs"}}" 
                                 alt="{{title}}" 
                                 class="w-16 h-16 object-cover rounded-lg">
                          </div>
                        {{/if}}
                        <div class="flex-1 min-w-0">
                          <h4 class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors duration-200 line-clamp-2">
                            <a href="{{url}}">{{title}}</a>
                          </h4>
                          <p class="text-xs text-gray-500 mt-1">
                            {{date format="MMM DD, YYYY"}}
                          </p>
                        </div>
                      </div>
                    </article>
                  {{/foreach}}
                {{else}}
                  <p class="text-gray-500 text-sm">No related articles found.</p>
                {{/get}}
              </div>
            </div>
            
            <!-- Back to Archive -->
            <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100 sidebar-widget">
              <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                <svg class="w-5 h-5 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
                </svg>
                Browse More
              </h3>
              <div class="space-y-3">
                <a href="{{@site.url}}/archive" class="block w-full text-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200">
                  View All Articles
                </a>
                {{#if primary_tag}}
                  <a href="{{primary_tag.url}}" class="block w-full text-center px-4 py-2 bg-gray-100 text-gray-700 font-medium rounded-lg hover:bg-gray-200 transition-colors duration-200 flex items-center justify-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z"></path>
                    </svg>
                    More in {{primary_tag.name}}
                  </a>
                {{/if}}
              </div>
            </div>
            
          </div>
        </aside>
      </div>
    </div>
  </section>
</main>
{{/post}}

<style>
/* Enhanced prose styling for Ghost content */
.prose {
  color: #374151;
  line-height: 1.8;
  word-spacing: 0.05em;
  letter-spacing: 0.01em;
}

.prose h1 {
  color: #111827;
  font-weight: 800;
  font-size: 2.25rem;
  margin-top: 0;
  margin-bottom: 2rem;
  line-height: 1.1111111;
}

.prose h2 {
  color: #111827;
  font-weight: 700 !important;
  font-size: 1.875rem !important;
  margin-top: 3rem;
  margin-bottom: 1.5rem;
  line-height: 1.3333333;
}

.prose h3 {
  color: #111827;
  font-weight: 600 !important;
  font-size: 1.5rem !important;
  margin-top: 2.5rem;
  margin-bottom: 1rem;
  line-height: 1.6;
}

.prose h4 {
  color: #111827;
  font-weight: 600;
  font-size: 1.25rem;
  margin-top: 2rem;
  margin-bottom: 0.75rem;
  line-height: 1.5;
}

.prose p {
  margin-top: 1.5rem !important;
  margin-bottom: 1.5rem !important;
}

.prose a {
  color: #2563eb;
  text-decoration: underline;
  font-weight: 500;
  transition: color 0.2s ease;
}

.prose a:hover {
  color: #1d4ed8;
}

.prose strong {
  color: #111827;
  font-weight: 600;
}

.prose ul, .prose ol {
  margin-top: 1.5rem;
  margin-bottom: 1.5rem;
  padding-left: 1.625rem;
}

.prose li {
  margin-top: 0.5rem;
  margin-bottom: 0.5rem;
}

.prose blockquote {
  font-weight: 500;
  font-style: italic;
  color: #111827;
  border-left-width: 0.25rem;
  border-left-color: #e5e7eb;
  quotes: "\201C""\201D""\2018""\2019";
  margin-top: 2rem;
  margin-bottom: 2rem;
  padding-left: 1rem;
}

.prose code {
  color: #111827;
  font-weight: 600;
  font-size: 0.875rem;
  background-color: #f3f4f6;
  padding: 0.25rem 0.375rem;
  border-radius: 0.375rem;
}

.prose pre {
  color: #e5e7eb;
  background-color: #1f2937;
  overflow-x: auto;
  font-weight: 400;
  font-size: 0.875rem;
  line-height: 1.7142857;
  margin-top: 2rem;
  margin-bottom: 2rem;
  border-radius: 0.5rem;
  padding: 1rem;
}

.prose pre code {
  background-color: transparent;
  border-width: 0;
  border-radius: 0;
  padding: 0;
  font-weight: inherit;
  color: inherit;
  font-size: inherit;
  font-family: inherit;
  line-height: inherit;
}

.prose img {
  margin-top: 2rem;
  margin-bottom: 2rem;
  border-radius: 0.5rem;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
}

.prose table {
  width: 100%;
  table-layout: auto;
  text-align: left;
  margin-top: 2rem;
  margin-bottom: 2rem;
  font-size: 0.875rem;
  line-height: 1.7142857;
}

.prose thead {
  border-bottom-width: 1px;
  border-bottom-color: #d1d5db;
}

.prose thead th {
  color: #111827;
  font-weight: 600;
  vertical-align: bottom;
  padding-right: 0.5rem;
  padding-bottom: 0.5rem;
  padding-left: 0.5rem;
}

.prose tbody td {
  vertical-align: baseline;
  padding-top: 0.5rem;
  padding-right: 0.5rem;
  padding-bottom: 0.5rem;
  padding-left: 0.5rem;
}

.prose tbody tr {
  border-bottom-width: 1px;
  border-bottom-color: #e5e7eb;
}

/* Line clamp utility */
.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const { animate, stagger } = Motion;
  
  // Animate hero elements on load
  animate('#post-meta', 
    { opacity: [0, 1], y: [20, 0] }, 
    { duration: 0.5, easing: 'ease-out' }
  );
  
  animate('#post-title', 
    { opacity: [0, 1], y: [30, 0] }, 
    { duration: 0.6, delay: 0.1, easing: 'ease-out' }
  );
  
  animate('#post-excerpt', 
    { opacity: [0, 1], y: [20, 0] }, 
    { duration: 0.5, delay: 0.2, easing: 'ease-out' }
  );
  
  // Animate content on scroll
  const postContent = document.getElementById('post-content');
  if (postContent) {
    const contentObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Animate main content
          animate('#ghost-content', 
            { opacity: [0, 1], y: [30, 0] }, 
            { duration: 0.6, easing: 'ease-out' }
          );
          
          // Animate sidebar widgets with stagger
          animate('.sidebar-widget', 
            { opacity: [0, 1], x: [30, 0] }, 
            { duration: 0.5, delay: stagger(0.1, {start: 0.3}), easing: 'ease-out' }
          );
          
          contentObserver.unobserve(entry.target);
        }
      });
    }, { threshold: 0.1 });
    
    contentObserver.observe(postContent);
  }
  
  // Smooth scroll for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });
});
</script>
