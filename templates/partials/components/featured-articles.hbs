<!-- Featured Posts -->
<div class="bg-card rounded-2xl shadow-lg p-6 border border-border sidebar-widget hover:shadow-xl transition-shadow duration-300">
  <h3 class="text-xl font-bold text-foreground mb-4 flex items-center">
    <div class="w-6 h-6 bg-gradient-to-br from-featured to-featured rounded-lg flex items-center justify-center mr-3">
      <svg class="w-3 h-3 text-primary-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
      </svg>
    </div>
    Featured Articles
  </h3>
  <div class="space-y-2">
    {{#get "posts" filter="featured:true" limit="5" include="authors"}}
      {{#foreach posts}}
        <article class="group relative cursor-pointer p-3 rounded-xl hover:bg-secondary/20 transition-all duration-200 border border-transparent hover:border-border">
          <div class="flex space-x-3">
            {{#if feature_image}}
              <div class="flex-shrink-0">
                <img src="{{img_url feature_image size="xs"}}" 
                     alt="{{title}}" 
                     class="w-16 h-16 object-cover rounded-xl group-hover:shadow-lg group-hover:scale-105 transition-all duration-200 ring-2 ring-transparent group-hover:ring-primary/30">
              </div>
            {{/if}}
            <div class="flex-1 min-w-0">
              <h4 class="text-sm font-semibold text-foreground group-hover:text-primary transition-colors duration-200 line-clamp-2 leading-snug">
                <a href="{{url}}" class="stretched-link">{{title}}</a>
              </h4>
              <div class="flex items-center space-x-2 mt-2">
                <p class="text-xs text-muted-foreground">
                  {{date format="MMM DD, YYYY"}}
                </p>
                <span class="w-1 h-1 bg-border-secondary rounded-full"></span>
                <div class="flex items-center space-x-1">
                  <svg class="w-3 h-3 text-featured" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                  </svg>
                  <span class="text-xs text-featured font-medium">Featured</span>
                </div>
              </div>
            </div>
          </div>
        </article>
      {{/foreach}}
    {{else}}
      <!-- Fallback when no featured posts -->
      <div class="text-center py-8">
        <div class="w-12 h-12 bg-muted rounded-xl flex items-center justify-center mx-auto mb-3">
          <svg class="w-6 h-6 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
          </svg>
        </div>
        <p class="text-sm text-muted-foreground">No featured articles yet</p>
      </div>
    {{/get}}
  </div>
</div>