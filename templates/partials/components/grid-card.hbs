<article class="group bg-bg-primary rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border border-border-primary featured-post-card relative cursor-pointer hover:border-primary-200 hover:-translate-y-1">
  {{#if feature_image}}
    <div class="relative overflow-hidden">
      <img src="{{img_url feature_image size="m"}}" 
           alt="{{title}}" 
           class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300">
      <div class="absolute inset-0 bg-gradient-to-t from-neutral-900/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
      <div class="absolute top-4 right-4">
        <div class="bg-gradient-to-r from-warning-400 to-warning-600 text-text-inverse px-3 py-1 rounded-full text-sm font-medium shadow-lg backdrop-blur-sm flex items-center space-x-1">
          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
            <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
          </svg>
          <span>Featured</span>
        </div>
      </div>
      <!-- Reading time indicator -->
      {{#if reading_time}}
        <div class="absolute bottom-4 left-4">
          <div class="bg-bg-primary/90 backdrop-blur-sm text-text-secondary px-2 py-1 rounded-lg text-xs font-medium flex items-center space-x-1">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>{{reading_time}}</span>
          </div>
        </div>
      {{/if}}
    </div>
  {{/if}}
  
  <div class="p-6">
    {{#if primary_tag}}
      <div class="mb-3">
        <span class="inline-block bg-primary/10 text-primary border border-primary/30 px-3 py-1 rounded-full text-sm font-medium hover:bg-primary/20 transition-colors duration-200">
          {{primary_tag.name}}
        </span>
      </div>
    {{/if}}
    
    <h3 class="text-xl font-bold text-text-primary mb-3 group-hover:text-interactive-primary transition-colors duration-200 leading-tight">
      <a href="{{url}}" class="stretched-link">{{title}}</a>
    </h3>
    
    {{#if excerpt}}
      <p class="text-text-secondary mb-4 line-clamp-3 leading-relaxed">{{excerpt}}</p>
    {{/if}}
    
    <div class="flex items-center justify-between text-sm">
      <div class="flex items-center space-x-3">
        {{#if primary_author.profile_image}}
          <img src="{{img_url primary_author.profile_image size="xs"}}" 
               alt="{{primary_author.name}}" 
               class="w-8 h-8 rounded-full ring-2 ring-border group-hover:ring-primary/30 transition-all duration-200">
        {{else}}
          <div class="w-8 h-8 rounded-full bg-gradient-to-br from-primary to-primary flex items-center justify-center ring-2 ring-border group-hover:ring-primary/30 transition-all duration-200">
            <svg class="w-4 h-4 text-text-inverse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
        {{/if}}
        <div class="flex flex-col">
          <span class="text-text-secondary font-medium">{{primary_author.name}}</span>
          <time datetime="{{date format="YYYY-MM-DD"}}" class="text-text-muted text-xs">
            {{date format="MMM DD, YYYY"}}
          </time>
        </div>
      </div>
      <div class="flex items-center space-x-2 text-text-muted">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </div>
    </div>
  </div>
</article>