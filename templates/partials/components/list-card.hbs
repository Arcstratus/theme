<article class="group bg-bg-primary rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden border border-border-primary latest-post-card relative cursor-pointer">
  <div class="flex flex-col md:flex-row">
    {{#if feature_image}}
      <div class="md:w-1/3 relative overflow-hidden">
        <img src="{{img_url feature_image size="m"}}" 
             alt="{{title}}" 
             class="w-full h-48 md:h-full object-cover group-hover:scale-105 transition-transform duration-300">
        {{#if featured}}
          <div class="absolute top-4 left-4">
            <span class="bg-gradient-to-r from-warning-400 to-warning-600 text-text-inverse px-3 py-1 rounded-full text-sm font-medium shadow-lg flex items-center space-x-1">
              <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
                <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
              </svg>
              <span>Featured</span>
            </span>
          </div>
        {{/if}}
      </div>
    {{/if}}
    
    <div class="{{#if feature_image}}md:w-2/3{{else}}w-full{{/if}} p-6 flex flex-col justify-between">
      <div>
        {{#if primary_tag}}
          <div class="mb-3">
            <span class="inline-block bg-bg-muted text-text-secondary px-3 py-1 rounded-full text-sm font-medium">
              {{primary_tag.name}}
            </span>
          </div>
        {{/if}}
        
        <h3 class="text-2xl font-bold text-text-primary mb-3 group-hover:text-interactive-primary transition-colors duration-200 line-clamp-2">
          <a href="{{url}}" class="stretched-link">{{title}}</a>
        </h3>
        
        {{#if excerpt}}
          <p class="text-text-secondary mb-4 line-clamp-2 md:line-clamp-3">{{excerpt}}</p>
        {{/if}}
      </div>
      
      <div class="flex items-center justify-between text-sm text-text-muted">
        <div class="flex items-center space-x-2">
          {{#if primary_author.profile_image}}
            <img src="{{img_url primary_author.profile_image size="xs"}}" 
                 alt="{{primary_author.name}}" 
                 class="w-8 h-8 rounded-full">
          {{/if}}
          <span>{{primary_author.name}}</span>
        </div>
        <div class="flex items-center space-x-4">
          <time datetime="{{date format="YYYY-MM-DD"}}">
            {{date format="MMM DD, YYYY"}}
          </time>
          {{#if reading_time}}
            <span class="flex items-center space-x-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span>{{reading_time}}</span>
            </span>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</article>