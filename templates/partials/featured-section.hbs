<!-- Featured Posts Section -->
<section class="py-20 bg-white" id="featured-posts">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4" id="featured-title">
        Featured Articles
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto" id="featured-subtitle">
        Discover our most popular and helpful content
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="featured-grid">
      {{#get "posts" filter="featured:true" limit="6" include="authors"}}
        {{#foreach posts}}
          {{> components/grid-card}}
        {{/foreach}}
      {{else}}
        <!-- Fallback when no featured posts -->
        <div class="col-span-full text-center py-12">
          <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-700 mb-2">No Featured Posts Yet</h3>
          <p class="text-gray-500">Featured articles will appear here once they're published.</p>
        </div>
      {{/get}}
    </div>
    
    {{#get "posts" filter="featured:true" limit="1" include="authors"}}
      {{#if posts}}
        <div class="text-center mt-12">
          <a href="{{@site.url}}/featured" 
             class="inline-flex items-center px-8 py-3 bg-blue-600 text-white font-medium rounded-xl hover:bg-blue-700 transition-colors duration-200 group">
            View All Featured Posts
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      {{/if}}
    {{/get}}
  </div>
</section>