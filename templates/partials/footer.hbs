        </div>
        {{#if @site.description}}
          <p class="text-neutral-300 text-lg max-w-2xl mx-auto leading-relaxed" id="footer-description">
            {{@site.description}}
          </p>
        {{/if}}
      </div>
      
      <!-- Enhanced Navigation Grid -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-12" id="footer-nav">
        <a href="{{@site.url}}" class="group flex flex-col items-center p-4 bg-bg-primary/5 hover:bg-bg-primary/10 rounded-xl border border-border-primary/20 hover:border-primary-400/30 transition-all duration-300">
