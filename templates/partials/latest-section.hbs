<!-- Latest Posts Section -->
<section class="py-20 bg-bg-secondary relative overflow-hidden" id="latest-posts">
  <!-- Background decorative elements -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-20 left-10 w-72 h-72 bg-gradient-to-br from-primary-100/20 to-secondary-100/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-56 h-56 bg-gradient-to-tl from-accent-100/30 to-primary-100/30 rounded-full blur-2xl"></div>
  </div>
  
  <div class="container mx-auto px-4 relative z-10">
    <!-- Enhanced Header -->
    <div class="text-center mb-16">
      <div class="flex items-center justify-center mb-6">
        <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-secondary-600 rounded-2xl flex items-center justify-center shadow-lg mr-4">
          <svg class="w-8 h-8 text-text-inverse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div>
          <h2 class="text-4xl md:text-5xl font-bold text-text-primary mb-2" id="latest-title">
            Latest Articles
          </h2>
          <div class="w-24 h-1 bg-gradient-to-r from-primary-500 to-secondary-600 rounded-full mx-auto"></div>
        </div>
      </div>
      <p class="text-lg text-text-secondary max-w-2xl mx-auto leading-relaxed" id="latest-subtitle">
        Stay up to date with our newest content, insights, and helpful resources
      </p>
    </div>
    
    <div class="flex flex-col lg:flex-row gap-12">
      <!-- Main Content -->
      <div class="lg:w-2/3">
        <div class="space-y-8" id="latest-list">
          {{#get "posts" filter="featured:false" limit="6" include="authors"}}
            {{#foreach posts}}
              {{> components/list-card}}
            {{/foreach}}
          {{else}}
            <!-- Enhanced Fallback -->
            <div class="text-center py-16">
              <div class="max-w-md mx-auto">
                <div class="w-24 h-24 bg-gradient-to-br from-primary-100 to-secondary-100 rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-lg">
                  <svg class="w-12 h-12 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                </div>
                <h3 class="text-2xl font-bold text-text-primary mb-3">No Posts Yet</h3>
                <p class="text-text-secondary leading-relaxed">Latest articles will appear here once they're published. Check back soon for fresh content!</p>
              </div>
            </div>
          {{/get}}
        </div>
      </div>
      
      <!-- Enhanced Sidebar -->
      <aside class="lg:w-1/3" id="latest-sidebar">
        <div class="space-y-8">
          
          <!-- About Widget -->
          <div class="bg-bg-primary rounded-2xl shadow-lg p-6 border border-border-primary sidebar-widget hover:shadow-xl transition-shadow duration-300">
            <h3 class="text-xl font-bold text-text-primary mb-4 flex items-center">
              <div class="w-6 h-6 bg-gradient-to-br from-secondary-400 to-secondary-600 rounded-lg flex items-center justify-center mr-3">
                <svg class="w-3 h-3 text-text-inverse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              {{@site.title}}
            </h3>
            <p class="text-text-secondary text-sm leading-relaxed mb-4">
              {{#if @site.description}}
                {{@site.description}}
              {{else}}
                Your go-to source for helpful articles, guides, and insights. We're here to help you find the answers you're looking for.
              {{/if}}
            </p>
            <a href="{{@site.url}}/about" 
               class="inline-flex items-center text-interactive-primary hover:text-interactive-primary-hover font-medium text-sm transition-colors duration-200">
              Learn more
              <svg class="w-4 h-4 ml-1 transition-transform duration-200 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
          
          <!-- Popular Tags -->
          <div class="bg-bg-primary rounded-2xl shadow-lg p-6 border border-border-primary sidebar-widget hover:shadow-xl transition-shadow duration-300">
            <h3 class="text-xl font-bold text-text-primary mb-4 flex items-center">
              <div class="w-6 h-6 bg-gradient-to-br from-accent-400 to-accent-600 rounded-lg flex items-center justify-center mr-3">
                <svg class="w-3 h-3 text-text-inverse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z"></path>
                </svg>
              </div>
              Popular Tags
            </h3>
            <p class="text-text-secondary text-sm mb-4">Explore content by topic</p>
            <div class="space-y-3">
              {{#get "tags" limit="8" include="count.posts"}}
                {{#foreach tags}}
                  <a href="{{url}}" class="flex items-center justify-between p-3 bg-bg-secondary hover:bg-primary-50 rounded-xl border border-border-primary hover:border-primary-200 transition-all duration-200 group">
                    <div class="flex items-center space-x-3">
                      <div class="w-8 h-8 bg-primary-100 group-hover:bg-primary-200 rounded-lg flex items-center justify-center transition-colors duration-200">
                        <svg class="w-4 h-4 text-interactive-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z"></path>
                        </svg>
                      </div>
                      <div>
                        <h4 class="font-semibold text-text-primary group-hover:text-interactive-primary transition-colors duration-200">{{name}}</h4>
                        {{#if description}}
                          <p class="text-xs text-text-muted line-clamp-1">{{description}}</p>
                        {{/if}}
                      </div>
                    </div>
                    <div class="flex items-center space-x-2">
                      <span class="text-xs font-medium text-text-muted bg-bg-muted px-2 py-1 rounded-full">
                        {{count.posts}} {{plural count.posts empty='posts' singular='post' plural='posts'}}
                      </span>
                      <svg class="w-4 h-4 text-text-muted group-hover:text-interactive-primary transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </div>
                  </a>
                {{/foreach}}
              {{/get}}
            </div>
          </div>
          
        </div>
      </aside>
    </div>
    
    <!-- Enhanced CTA Button -->
    <div class="text-center mt-16">
      <div class="inline-flex flex-col items-center">
        <a href="{{@site.url}}/archive" 
           class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-bg-inverse to-neutral-800 text-text-inverse font-semibold rounded-2xl hover:shadow-lg hover:scale-105 transition-all duration-300 group shadow-md">
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
          <span>View All Posts</span>
          <svg class="w-5 h-5 ml-3 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        <p class="text-text-muted text-sm mt-3">Browse our complete archive of articles</p>
      </div>
    </div>
  </div>
</section>