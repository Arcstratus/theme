<!-- Hero Section -->
<section class="relative py-8 md:py-12" id="hero-section">
  <div class="container mx-auto px-4">
    
    <!-- Hero Card -->
    <div class="w-full rounded-3xl shadow-2xl overflow-hidden" id="hero-card" style="background: radial-gradient(63.3% 160% at 89.6% 135.7%, rgb(82, 116, 255) 0%, rgba(82, 116, 255, 0) 69.76%), radial-gradient(63.3% 160.6% at -1.2% -62.1%, rgba(82, 116, 255, 0.38) 0%, rgba(82, 116, 255, 0) 69.7625%)">
      <!-- Card Content -->
      <div class="relative p-8 md:p-12 lg:p-16 text-center">
        <div class="max-w-4xl mx-auto">
          
          <!-- Title Row with Logo and Hello Message -->
          <div class="flex items-center justify-center mb-4" id="hero-title">
            <div class="flex items-center space-x-4">
              <!-- Logo -->
              {{#if @site.logo}}
                <img src="{{@site.logo}}" alt="{{@site.title}}" class="w-12 h-12 object-contain">
              {{else}}
                <div class="w-12 h-12 bg-gradient-to-br from-background to-card rounded-2xl flex items-center justify-center shadow-lg" id="hero-logo">
                  <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" />
                  </svg>
                </div>
              {{/if}}
              <!-- Hello Message -->
              <h1 class="text-3xl md:text-5xl font-bold text-primary-foreground" id="hello-message">Hello</h1>
            </div>
          </div>
          
          <!-- Subtitle -->
          <div class="mb-3" id="hero-subtitle">
            <h2 class="text-2xl md:text-3xl font-semibold text-primary-foreground/90">This is {{@site.title}} knowledge base</h2>
          </div>
          
          <!-- Description -->
          <div class="mb-8" id="hero-description">
            <p class="text-lg md:text-xl text-primary-foreground/80 max-w-2xl mx-auto">Need help? You found the right place.</p>
          </div>
          
          <!-- Search Section -->
          <div class="max-w-2xl mx-auto" id="hero-search">
            <div class="relative">
              <button class="w-full bg-background/20 backdrop-blur-sm border-2 border-primary-foreground/30 rounded-lg px-4 py-3 flex items-center justify-between text-left text-primary-foreground/80 hover:border-primary-foreground/50 hover:bg-background/30 transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-primary-foreground/20 focus:border-primary-foreground/60 group"
                      id="search-trigger"
                      data-ghost-search
                      aria-label="Open search dialog">
                <div class="flex items-center space-x-3">
                  <svg class="w-6 h-6 text-primary-foreground/80 group-hover:text-primary-foreground transition-colors"
                       fill="none"
                       stroke="currentColor"
                       viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z">
                    </path>
                  </svg>
                  <span class="text-lg">Search for articles, guides, and more...</span>
                </div>
                <div class="hidden md:flex items-center space-x-1 text-sm text-primary-foreground/70">
                  <kbd class="px-2 py-1 bg-primary-foreground/20 rounded border border-primary-foreground/30 text-xs">âŒ˜</kbd>
                  <kbd class="px-2 py-1 bg-primary-foreground/20 rounded border border-primary-foreground/30 text-xs">K</kbd>
                </div>
              </button>
            </div>
          </div>
          
        </div>
      </div>
    </div>
    
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const { animate, stagger } = Motion;
  
  // Animate hero card entrance
  animate('#hero-card', 
    { opacity: [0, 1], y: [50, 0], scale: [0.95, 1] }, 
    { duration: 0.8, easing: 'ease-out' }
  );
  
  // Animate hero content with stagger
  animate('#hero-title, #hero-subtitle, #hero-description, #hero-search', 
    { opacity: [0, 1], y: [20, 0] }, 
    { duration: 0.6, delay: stagger(0.1, { start: 0.3 }), easing: 'ease-out' }
  );
  
  // Add hover animation to search button
  const searchButton = document.getElementById('search-trigger');
  if (searchButton) {
    searchButton.addEventListener('mouseenter', () => {
      animate(searchButton, { scale: 1.02 }, { duration: 0.2 });
    });
    
    searchButton.addEventListener('mouseleave', () => {
      animate(searchButton, { scale: 1 }, { duration: 0.2 });
    });
  }
});
</script>