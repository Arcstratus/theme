{{!< default}}

<main class="min-h-screen bg-background">
  <!-- Enhanced Hero Section -->
  <section class="relative py-20 bg-gradient-to-br from-featured/20 via-background to-featured/30 overflow-hidden" id="featured-hero">
    <div class="container mx-auto px-4 text-center relative z-10">
      <div class="flex items-center justify-center mb-8">
        <div class="w-16 h-16 bg-gradient-to-br from-featured to-featured rounded-2xl flex items-center justify-center shadow-lg mr-4">
          <svg class="w-8 h-8 text-primary-foreground" fill="currentColor" viewBox="0 0 24 24">
            <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
          </svg>
        </div>
        <div>
          <h1 class="text-4xl md:text-6xl font-bold text-foreground mb-2" id="featured-title">
            Featured Articles
          </h1>
          <div class="w-24 h-1 bg-gradient-to-r from-featured to-featured rounded-full mx-auto"></div>
        </div>
      </div>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto leading-relaxed" id="featured-subtitle">
        Discover our handpicked collection of the most important and valuable content
      </p>
    </div>
    
    <!-- Enhanced Animated background elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute -top-10 -right-10 w-96 h-96 bg-gradient-to-br from-featured/20 to-featured/30 rounded-full opacity-50 animate-pulse"></div>
      <div class="absolute -bottom-10 -left-10 w-96 h-96 bg-gradient-to-tl from-featured/20 to-featured/30 rounded-full opacity-50 animate-pulse" style="animation-delay: 1s;"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-32 h-32 bg-gradient-to-br from-featured/10 to-featured/20 rounded-full opacity-60 animate-pulse" style="animation-delay: 2s;"></div>
    </div>
  </section>

  <!-- Enhanced Featured Content -->
  <section class="py-16" id="featured-content">
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row gap-12">
        
        <!-- Main Content -->
        <div class="lg:w-2/3">
          <!-- Enhanced Stats -->
          <div class="mb-8" id="featured-stats">
            <div class="bg-card rounded-2xl shadow-xl p-6 border border-border hover:shadow-2xl transition-shadow duration-300">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="w-12 h-12 bg-gradient-to-br from-featured to-featured rounded-xl flex items-center justify-center mr-4 shadow-lg">
                    <svg class="w-6 h-6 text-primary-foreground" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                    </svg>
                  </div>
                  <div>
                    <h2 class="text-xl font-bold text-foreground">Featured Articles</h2>
                    <p class="text-muted-foreground">Curated collection of top content</p>
                  </div>
                </div>
                <div class="text-right">
                  <div class="text-3xl font-bold text-primary">
                    {{#get "posts" filter="featured:true"}}
                      {{posts.length}}
                    {{/get}}
                  </div>
                  <div class="text-sm text-muted-foreground">Featured Posts</div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Posts List -->
          <div class="space-y-8" id="featured-list">
            {{#get "posts" filter="featured:true" include="authors"}}
              {{#foreach posts}}
                {{> components/list-card}}
              {{/foreach}}
            {{else}}
              <!-- Enhanced Fallback when no featured posts -->
              <div class="text-center py-16">
                <div class="max-w-md mx-auto">
                  <div class="w-24 h-24 bg-gradient-to-br from-featured/20 to-featured/30 rounded-2xl flex items-center justify-center mx-auto mb-6 shadow-lg">
                    <svg class="w-12 h-12 text-featured" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                    </svg>
                  </div>
                  <h3 class="text-2xl font-bold text-foreground mb-3">No Featured Posts Yet</h3>
                  <p class="text-muted-foreground leading-relaxed">Featured articles will appear here once they're published. Check back soon for curated content!</p>
                </div>
              </div>
            {{/get}}
          </div>
        </div>
        
        <!-- Enhanced Sidebar -->
        <aside class="lg:w-1/3" id="featured-sidebar">
          <div class="space-y-8">
            
            <!-- Enhanced Search Widget -->
            <div class="bg-card rounded-2xl shadow-lg p-6 border border-border sidebar-widget hover:shadow-xl transition-shadow duration-300">
              <h3 class="text-xl font-bold text-foreground mb-4 flex items-center">
                <div class="w-6 h-6 bg-gradient-to-br from-primary to-primary rounded-lg flex items-center justify-center mr-3">
                  <svg class="w-3 h-3 text-primary-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                  </svg>
                </div>
                Search Articles
              </h3>
              <p class="text-muted-foreground text-sm mb-4">Find specific content quickly</p>
              <button class="w-full bg-muted border border-border rounded-xl px-4 py-3 flex items-center text-left text-muted-foreground hover:border-primary hover:bg-muted/50 transition-all duration-200 group"
                      data-ghost-search>
                <svg class="w-5 h-5 text-muted-foreground group-hover:text-primary transition-colors mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                <span>Search for articles...</span>
              </button>
            </div>
            
            <!-- Enhanced Popular Tags -->
            <div class="bg-card rounded-2xl shadow-lg p-6 border border-border sidebar-widget hover:shadow-xl transition-shadow duration-300">
              <h3 class="text-xl font-bold text-foreground mb-4 flex items-center">
                <div class="w-6 h-6 bg-gradient-to-br from-primary to-primary rounded-lg flex items-center justify-center mr-3">
                  <svg class="w-3 h-3 text-primary-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z"></path>
                  </svg>
                </div>
                Browse by Topic
              </h3>
              <p class="text-muted-foreground text-sm mb-4">Filter content by category</p>
              <div class="space-y-3">
                {{#get "tags" limit="10" include="count.posts"}}
                  {{#foreach tags}}
                    <a href="{{url}}" class="flex items-center justify-between p-3 bg-muted hover:bg-secondary/20 rounded-xl border border-border hover:border-secondary/30 transition-all duration-200 group">
                      <div class="flex items-center space-x-3">
                        <div class="w-8 h-8 bg-background group-hover:bg-secondary/20 rounded-lg flex items-center justify-center transition-colors duration-200">
                          <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z"></path>
                          </svg>
                        </div>
                        <div>
                          <h4 class="font-semibold text-foreground group-hover:text-primary transition-colors duration-200">{{name}}</h4>
                          {{#if description}}
                            <p class="text-xs text-muted-foreground line-clamp-1">{{description}}</p>
                          {{/if}}
                        </div>
                      </div>
                      <div class="flex items-center space-x-2">
                        <span class="text-xs font-medium text-muted-foreground bg-background px-2 py-1 rounded-full">
                          {{count.posts}} {{plural count.posts empty='posts' singular='post' plural='posts'}}
                        </span>
                        <svg class="w-4 h-4 text-muted-foreground group-hover:text-primary transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                      </div>
                    </a>
                  {{/foreach}}
                {{/get}}
              </div>
            </div>
            
            <!-- Enhanced Navigation Widget -->
            <div class="bg-card rounded-2xl shadow-lg p-6 border border-border sidebar-widget hover:shadow-xl transition-shadow duration-300">
              <h3 class="text-xl font-bold text-foreground mb-4 flex items-center">
                <div class="w-6 h-6 bg-gradient-to-br from-primary to-primary rounded-lg flex items-center justify-center mr-3">
                  <svg class="w-3 h-3 text-primary-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
                  </svg>
                </div>
                Browse More
              </h3>
              <div class="space-y-3">
                <a href="{{@site.url}}/archive" class="block w-full text-center px-4 py-3 bg-gradient-to-r from-primary to-primary text-primary-foreground font-medium rounded-xl hover:shadow-lg hover:scale-105 transition-all duration-300">
                  View All Articles
                </a>
                <a href="{{@site.url}}" class="block w-full text-center px-4 py-3 bg-muted border border-border text-foreground font-medium rounded-xl hover:bg-muted/50 hover:border-primary transition-all duration-300">
                  Back to Home
                </a>
              </div>
            </div>
            
          </div>
        </aside>
      </div>
    </div>
  </section>
</main>

<style>
.stretched-link::after {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1;
  content: "";
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const { animate, stagger } = Motion;
  
  // Animate hero elements on load
  animate('#featured-title', 
    { opacity: [0, 1], y: [30, 0] }, 
    { duration: 0.6, easing: 'ease-out' }
  );
  
  animate('#featured-subtitle', 
    { opacity: [0, 1], y: [20, 0] }, 
    { duration: 0.5, delay: 0.2, easing: 'ease-out' }
  );
  
  // Animate stats section
  animate('#featured-stats', 
    { opacity: [0, 1], y: [20, 0] }, 
    { duration: 0.5, delay: 0.4, easing: 'ease-out' }
  );
  
  // Animate content on scroll
  const featuredContent = document.getElementById('featured-content');
  if (featuredContent) {
    const contentObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Animate post cards with stagger
          animate('.latest-post-card', 
            { opacity: [0, 1], y: [40, 0] }, 
            { duration: 0.5, delay: stagger(0.1, {start: 0.2}), easing: 'ease-out' }
          );
          
          // Animate sidebar widgets with stagger
          animate('.sidebar-widget', 
            { opacity: [0, 1], x: [30, 0] }, 
            { duration: 0.5, delay: stagger(0.1, {start: 0.6}), easing: 'ease-out' }
          );
          
          contentObserver.unobserve(entry.target);
        }
      });
    }, { threshold: 0.1 });
    
    contentObserver.observe(featuredContent);
  }
});
</script>